FROM openjdk:8-jdk-alpine as build
WORKDIR /workspace/app

COPY gradlew .
COPY gradle gradle
COPY .gradle .gradle
COPY build.gradle .
COPY src src

RUN ./gradlew build
RUN mkdir -p build/dependency && (cd build/dependency; jar -xf ../libs/*.jar)

FROM openjdk:8-jdk-alpine
VOLUME /tmp

ARG DEPENDENCY=/workspace/app/build/dependency
COPY --from=build ${DEPENDENCY}/BOOT-INF/lib /app/lib
COPY --from=build ${DEPENDENCY}/META-INF /app/META-INF
COPY --from=build ${DEPENDENCY}/BOOT-INF/classes /app
RUN echo "Dependency space set to ${DEPENDENCY}"
CMD ["java","-cp","app:app/lib/*","-Dserver.port=8082","-Dspring.config.location=classpath:light-application.properties","com.playground.springboot.initiator.LightProcessingLauncher"]
